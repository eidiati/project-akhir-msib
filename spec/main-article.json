{
  "openapi": "3.0.2",
  "info": {
    "title": "Main Article Api",
    "version": "1"
  },
  "servers": [
    {
      "url": "https://{environtment}.main-article",
      "variables": {
        "environtment": {
          "default": "dev",
          "enum": ["dev", "qa", "prod"]
        }
      }
    }
  ],
  "paths": {
    "/main-article/{id}": {
      "get": {
        "tags": ["main-article"],
        "summary": "Ambil 1 data berita",
        "description": "Ambil 1 data berita berdasarkan id",
        "parameters": [
          {
            "$ref": "#/components/parameters/id-main-article"
          }
        ],
        "responses": {
          "200": {
            "description": "Sukses ambil 1 data berita",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/200"
                },
                "examples": {
                  "success": {
                    "description": "Contoh response sukses ambil 1 data berita",
                    "value": {
                      "code": 200,
                      "success": true,
                      "message": "Sukses mendapatkan 1 data berita",
                      "data": {
                        "post_id": 1,
                        "post_title": "HPN 2023 di Medan, PWI Riau akan Berangkatkan Ratusan WartawanHPN 2023 di Medan, PWI Riau akan Berangkatkan Ratusan Wartawan",
                        "post_category": "acara",
                        "post_content": "lorem ipsum sfsdfj dafgjsdif kkjsdjfks iashfoehf enakeun jenglapo laenpenv eooigowej",
                        "thumbnail": "tes.png",
                        "medium_thumbnail": "tes.png",
                        "post_url": "https://lancangkuning/tes",
                        "post_date": "4 september 2023, senin"
                      }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Gagal ambil 1 data berita",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/404"
                },
                "examples": {
                  "failed": {
                    "$ref": "#/components/examples/404"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "parameters": {
      "id-main-article": {
        "name": "id",
        "in": "path",
        "required": true,
        "description": "id main-article sebagai parameter",
        "schema": {
          "type": "number",
          "minLength": 1
        }
      }
    },
    "schemas": {
      "200": {
        "type": "object",
        "properties": {
          "code": {
            "type": "integer"
          },
          "success": {
            "type": "boolean"
          },
          "message": {
            "type": "string"
          },
          "data": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "post_id": {
                  "type": "number"
                },
                "post_title": {
                  "type": "string"
                },
                "post_category": {
                  "type": "string"
                },
                "post_content": {
                  "type": "string"
                },
                "thumbnail": {
                  "type": "string"
                },
                "medium_thumbnail": {
                  "type": "string"
                },
                "post_url": {
                  "type": "string"
                },
                "post_date": {
                  "type": "string"
                }
              },
              "required": ["post_id"]
            }
          }
        }
      },
      "404": {
        "type": "object",
        "properties": {
          "code": {
            "type": "integer"
          },
          "success": {
            "type": "boolean"
          },
          "errors": {
            "type": "string"
          }
        }
      }
    },
    "examples": {
      "404": {
        "description": "Contoh response gagal mendapatkan data",
        "value": {
          "code": 404,
          "success": false,
          "message": "Data yang anda cari tidak ditemukan",
          "details": "Pastikan url yang anda gunakan benar dan data yang anda cari ada didalam sistem."
        }
      }
    }
  }
}
